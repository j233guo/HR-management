<div class="row">
    <div class="col-md-12">
        <h2>
            Employees
            <a href = "/employees/add"><button class="btn btn-success float-right">Add Employee</button></a>
        </h2>
        <hr/>
        <p>
            <div class = "table-responsive">
                <table class = "table">
                    <tr>
                        <th>Employee Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hired On</th>
                        <th></th>
                    </tr>
                    {{#each employees}}
                        <tr>
                            <td>{{employeeNum}}</td>
                            <td><a href = "/employee/{{employeeNum}}">{{firstName}} {{lastName}}</a></td>
                            <td><a href = "mailto:{{email}}">{{email}}</a></td>
                            <td>{{addressStreet}} {{addressCity}} {{addressState}} {{addressPostal}}</td>
                            <td>{{employeeManagerNum}}</td>
                            <td>{{status}}</td>
                            <td><a href = "/employees?department={{department}}">{{department}}</a></td>
                            <td>{{hireDate}}</td>
                            <td>
                                <a href="/employees/delete/{{employeeNum}}">
                                    <button class = "btn btn-danger">Remove</button>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>  
            {{#unless employees}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{/unless}}    
        </p>
    </div>
</div>
